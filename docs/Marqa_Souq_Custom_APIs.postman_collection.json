{
  "info": {
    "name": "Marqa Souq - Custom APIs",
    "description": "Complete API collection for RunBazaar-style marketplace",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{admin_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:9000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "customer_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('admin_token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@marqasouq.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/auth",
              "host": ["{{base_url}}"],
              "path": ["admin", "auth"]
            }
          }
        },
        {
          "name": "Customer Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('customer_token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/store/auth",
              "host": ["{{base_url}}"],
              "path": ["store", "auth"]
            }
          }
        }
      ]
    },
    {
      "name": "Brands API",
      "item": [
        {
          "name": "Store - List Brands",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/store/brands",
              "host": ["{{base_url}}"],
              "path": ["store", "brands"]
            }
          }
        },
        {
          "name": "Store - Get Brand by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/store/brands/:id",
              "host": ["{{base_url}}"],
              "path": ["store", "brands", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "brand_01HQXXX"
                }
              ]
            }
          }
        },
        {
          "name": "Admin - List Brands",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/brands",
              "host": ["{{base_url}}"],
              "path": ["admin", "brands"],
              "query": [
                {
                  "key": "is_active",
                  "value": "true",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Admin - Create Brand",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('brand_id', jsonData.brand.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Apple\",\n  \"slug\": \"apple\",\n  \"description\": \"Premium electronics and innovative technology\",\n  \"logo_url\": \"https://example.com/brands/apple-logo.png\",\n  \"banner_url\": \"https://example.com/brands/apple-banner.jpg\",\n  \"meta_title\": \"Apple Products - Marqa Souq\",\n  \"meta_description\": \"Shop the latest Apple products including iPhone, iPad, MacBook, and more\",\n  \"display_order\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/brands",
              "host": ["{{base_url}}"],
              "path": ["admin", "brands"]
            }
          }
        },
        {
          "name": "Admin - Update Brand",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated description for Apple brand\",\n  \"is_active\": true,\n  \"display_order\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/brands/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "brands", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{brand_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Admin - Delete Brand",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/brands/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "brands", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{brand_id}}"
                }
              ]
            }
          }
        }
      ]
